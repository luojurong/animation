<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        style="@style/match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/btn7"
                style="@style/fresh_week"
                android:text="日"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/btn1"
                style="@style/fresh_week"
                android:text="一"
                />
            <TextView
                android:id="@+id/btn2"
                style="@style/fresh_week"
                android:text="二"
                />
            <TextView
                android:id="@+id/btn3"
                style="@style/fresh_week"
                android:text="三"
                />
            <TextView
                android:id="@+id/btn4"
                style="@style/fresh_week"
                android:text="四"
                />
            <TextView
                android:id="@+id/btn5"
                style="@style/fresh_week"
                android:text="五"
                />
            <TextView
                android:id="@+id/btn6"
                style="@style/fresh_week"
                android:text="六"
                />
        </LinearLayout>

        <include layout="@layout/fresh_item_listhead"></include>
        <com.animation.animation.view.ExpandListView
            android:id="@+id/sevenListView"
            style="@style/match_parent"></com.animation.animation.view.ExpandListView>

        <include layout="@layout/fresh_item_listhead"></include>
        <com.animation.animation.view.ExpandListView
            android:id="@+id/oneListView"
            style="@style/match_parent"
            ></com.animation.animation.view.ExpandListView>

        <include layout="@layout/fresh_item_listhead"></include>
        <com.animation.animation.view.ExpandListView
            android:id="@+id/twoListView"
            style="@style/match_parent"
            ></com.animation.animation.view.ExpandListView>

        <include layout="@layout/fresh_item_listhead"></include>
        <com.animation.animation.view.ExpandListView
            android:id="@+id/thereListView"
            style="@style/match_parent"></com.animation.animation.view.ExpandListView>

        <include layout="@layout/fresh_item_listhead"></include>
        <com.animation.animation.view.ExpandListView
            android:id="@+id/fourListView"
            style="@style/match_parent"></com.animation.animation.view.ExpandListView>

        <include layout="@layout/fresh_item_listhead"></include>
        <com.animation.animation.view.ExpandListView
            android:id="@+id/fiveListView"
            style="@style/match_parent"></com.animation.animation.view.ExpandListView>

        <include layout="@layout/fresh_item_listhead"></include>
        <com.animation.animation.view.ExpandListView
            android:id="@+id/sixListView"
            style="@style/match_parent"></com.animation.animation.view.ExpandListView>

    </LinearLayout>
</ScrollView>